{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],                               
   

    "paths": {
      "@/*": ["./src/*"]
    },

    /* Modules */
    "module": "nodenext",                        
    "esModuleInterop": true,                                   
    "forceConsistentCasingInFileNames": true,            

    
    /* Type Checking */
    "strict": true,                                     
    

    /* Completeness */
    "skipLibCheck": true                                 
  }
}
